{
  "npm.packageManager": "pnpm",
  "editor.formatOnSave": true,
  "prettier.requireConfig": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp"
  },
  "files.exclude": {
    "**/.vs": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/yarn.lock": true,
    "**/bin": true,
    "**/obj": true,
    "**/release": true,
    "**/*.csproj.user": true
  },
  "files.associations": {
    "appsettings*.json": "jsonc"
  }
}
